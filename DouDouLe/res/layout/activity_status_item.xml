<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/imageView_status_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textView_status_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView_status_user"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/imageView_status_user"
        android:text="name" />

    <TextView
        android:id="@+id/textView_status_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_status_user"
        android:layout_alignLeft="@+id/textView_status_name"
        android:text="time" />

    <TextView
        android:id="@+id/textView_status_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView_status_user"
        android:layout_below="@+id/imageView_status_user"
        android:layout_marginTop="26dp"
        android:text="content" />

    <ImageView
        android:id="@+id/imageView_status_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_status_content"
        android:layout_below="@+id/textView_status_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textView_status_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="comment" />

    <TextView
        android:id="@+id/textView_status_manner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/textView_status_comment"
        android:text="manner" />

    <TextView
        android:id="@+id/textView_status_transmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_status_comment"
        android:layout_alignBottom="@+id/textView_status_comment"
        android:layout_marginRight="24dp"
        android:layout_toLeftOf="@+id/textView_status_comment"
        android:text="transmit" />

    <TextView
        android:id="@+id/textView_status_resource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_status_content"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/textView_status_time"
        android:text="resource" />

</RelativeLayout>